<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

    <definition name="default" template="/WEB-INF/templates/template.jsp">
    	<put-attribute name="title" value="Nisum On-Boarding" type="string"/>
        <put-attribute name="header" value="/WEB-INF/templates/header.jsp"/>
        <put-attribute name="content" value="/WEB-INF/templates/content.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/templates/footer.jsp"/>
	    <put-list-attribute name="stylesheets">
	        <add-attribute value="/resources/css/main.css"/>
	        <add-attribute value="/resources/css/jquery-ui-1.10.0.css"/>
	    </put-list-attribute>
        <put-list-attribute name="javascripts">
        	<add-attribute value="/resources/js/jquery-1.9.1.min.js"/>
    		<add-attribute value="/resources/js/jquery-ui-1.10.0.min.js"/>
	    </put-list-attribute>
    </definition>
    
    <definition name="index" extends="default">
        <put-attribute name="title" value="Nisum On-Boarding"/>
        <put-attribute name="content" value="/WEB-INF/views/index.jsp"/>
    </definition>
    
    <definition name="participant/all-participants" extends="default">
        <put-attribute name="title" value="Nisum On-Boarding: Participants"/>
        <put-attribute name="content" value="/WEB-INF/views/participant/all-participants.jsp"/>
        <put-list-attribute name="stylesheets" inherit="true">
        	<add-attribute value="/resources/js/jtable.2.4.0/themes/lightcolor/blue/jtable.css"/>
        </put-list-attribute>
        <put-list-attribute name="javascripts" inherit="true">
        	<add-attribute value="/resources/js/jtable.2.4.0/jquery.jtable.js"/>
        	<add-attribute value="/resources/js/participantsJTable.js"/>
        </put-list-attribute>
    </definition>
    
    <definition name="participant/new-participant" extends="default">
        <put-attribute name="title" value="Nisum On-Boarding: Participant Registration"/>
        <put-attribute name="content" value="/WEB-INF/views/participant/new-participant.jsp"/>
    </definition>
    
</tiles-definitions>